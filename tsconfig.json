{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "outDir": "build",
    "module": "esnext",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
